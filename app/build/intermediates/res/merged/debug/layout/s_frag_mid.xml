<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scouter.ScoutFragMid">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/middle">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ffe3e3ff"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginLeft="40dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier1"
                    android:onClick="barrier1"
                    android:src="@drawable/barrier1"
                    android:background="#200000ff"
                    android:layout_margin="2dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier2"
                    android:onClick="barrier2"
                    android:src="@drawable/barrier2"
                    android:background="#200000ff"
                    android:layout_margin="2dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier3"
                    android:onClick="barrier3"
                    android:src="@drawable/barrier3"
                    android:background="#200000ff"
                    android:layout_margin="2dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier4"
                    android:onClick="barrier4"
                    android:src="@drawable/barrier4"
                    android:background="#200000ff"
                    android:layout_margin="2dp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier0"
                    android:onClick="barrier0"
                    android:src="@drawable/barrier0"
                    android:background="#200000ff"
                    android:layout_margin="2dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="#ffffe3e3"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginRight="40dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier9"
                    android:onClick="barrier9"
                    android:src="@drawable/barrier0"
                    android:background="#20ff0000"
                    android:layout_margin="2dp"
                    android:rotation="180" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier8"
                    android:onClick="barrier8"
                    android:src="@drawable/barrier8"
                    android:background="#20ff0000"
                    android:layout_margin="2dp"
                    android:rotation="180" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier7"
                    android:onClick="barrier7"
                    android:src="@drawable/barrier7"
                    android:background="#20ff0000"
                    android:layout_margin="2dp"
                    android:rotation="180" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier6"
                    android:onClick="barrier6"
                    android:src="@drawable/barrier6"
                    android:background="#20ff0000"
                    android:layout_margin="2dp"
                    android:rotation="180" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:id="@+id/barrier5"
                    android:onClick="barrier5"
                    android:src="@drawable/barrier5"
                    android:background="#20ff0000"
                    android:layout_margin="2dp"
                    android:rotation="180"/>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
